<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="app.meantneat.com.meetneat.Controller.Login.LoginActivity"
    android:background="@color/eat_black"
    android:orientation="vertical"
    android:gravity="center"
    >

    <EditText
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/login_activity_email_text_field"
        android:background="@drawable/gray_text_field"
        android:hint="Email address"
        android:paddingLeft="5dp" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/login_activity_password_text_field"
        android:background="@drawable/gray_text_field"
        android:hint="Password"
        android:layout_marginTop="5dp"
        android:paddingLeft="5dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:text="LogIn"
        android:id="@+id/login_activity_login_button"
        android:textColor="@color/eat_white"
        android:background="@drawable/green_button"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="forgor your password?"
        android:id="@+id/textView9"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/eat_orange"
        android:layout_marginTop="20dp"
        android:textSize="15dp" />
</LinearLayout>
