<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp" android:layout_height="300dp"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="@color/eat_black">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="Price"
        android:id="@+id/textView2"
        android:layout_gravity="center_vertical"
        android:textColor="@color/eat_orange"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center_vertical" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/add_dish_phase_two_price_edit_text_id"
        android:layout_gravity="center_vertical"
        android:background="@drawable/gray_text_field"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:paddingLeft="5dp"
        android:gravity="center_vertical" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="Quantity"
        android:id="@+id/textView3"
        android:textColor="@color/eat_orange"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center_vertical" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/add_dish_phase_two_quantity_edit_text_id"
        android:inputType="number"
        android:background="@drawable/gray_text_field"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:paddingLeft="5dp"
        android:gravity="center_vertical" />

</LinearLayout>
