<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp" android:layout_height="350dp"
    android:orientation="vertical"
    android:background="@color/eat_white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="280dp"
        android:id="@+id/add_dish_dialog_box_linear_layout_id"></LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="Back"
            android:id="@+id/add_dish_dialog_box_back_button_id"
            android:layout_weight="1"
            android:visibility="gone"
            android:layout_margin="2dp"
            android:background="@drawable/green_button"
            android:textColor="@color/eat_black" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="Next"
            android:id="@+id/add_dish_dialog_box_next_button_id"
            android:layout_weight="1"
            android:background="@drawable/green_button"
            android:textColor="@color/eat_black"
            android:layout_margin="2dp" />

    </LinearLayout>
</LinearLayout>
