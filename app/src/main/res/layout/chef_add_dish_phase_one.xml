<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    android:background="@color/eat_white"
    android:animateLayoutChanges="true">
    <android.support.v7.widget.CardView
        android:layout_width="250dp"
        android:layout_height="300dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="4dp">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Dish Title"
        android:id="@+id/dd"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:textColor="@color/eat_orange"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:visibility="gone" />


        <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_dish_phase_one_title_edit_text_id"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:paddingLeft="5dp"
            android:hint="Title"
        android:textColor="@color/eat_black"
        android:textColorHint="@color/eat_black"

            android:gravity="center_vertical"
            app:met_baseColor="@color/eat_black"
            app:met_primaryColor="@color/eat_black"
            app:met_errorColor="@color/eat_black"
            app:met_hideUnderline="false"
            app:met_floatingLabel="highlight"
            app:met_singleLineEllipsis="true"
            android:layout_marginTop="50dp" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="Description"
        android:id="@+id/ff"

        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:textColor="@color/eat_orange"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:visibility="gone" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_dish_phase_one_description_edit_text_id"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/gray_text_field"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:paddingLeft="5dp"
        android:textColor="@color/eat_black"
        android:textColorHint="@color/eat_black"
        android:hint="Decription"
        android:gravity="center_vertical"
        app:met_baseColor="@color/eat_black"
        app:met_primaryColor="@color/eat_black"
        app:met_errorColor="@color/eat_black"
        app:met_hideUnderline="false"
        app:met_floatingLabel="highlight"
        app:met_singleLineEllipsis="true"

        android:layout_marginTop="50dp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
