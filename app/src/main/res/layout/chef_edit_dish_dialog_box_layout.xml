<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="300dp"
    android:layout_height="500dp"
    android:gravity="center_horizontal"
    android:background="@color/eat_black">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/chef_edit_dish_dialog_box_image_view"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/chef_edit_dish_dialog_box_title_edit_text"
        android:background="@drawable/gray_text_field"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:textColor="@color/eat_white" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/chef_edit_dish_dialog_box_description_edit_text"
        android:background="@drawable/gray_text_field"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:textColor="@color/eat_white" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/chef_edit_dish_dialog_box_price_edit_text"
        android:background="@drawable/gray_text_field"
        android:autoText="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:textColor="@color/eat_white" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/chef_edit_dish_dialog_box_quantity_edit_text"
        android:background="@drawable/gray_text_field"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:layout_marginBottom="20dp"
        android:textColor="@color/eat_white" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Edit Dish"
        android:id="@+id/chef_edit_dish_dialog_box_edit_dish_button"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:textColor="@color/eat_white"
        android:background="@drawable/green_button"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp" />
</LinearLayout>