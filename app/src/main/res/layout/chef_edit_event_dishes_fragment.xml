<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:background="@color/eat_white">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.meantneat.com.meetneat.Controller.Chef.EditEventDishesFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal|top">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="10dp">

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/add_event_fragment_title_edit_text_id"
                        android:textColor="@color/eat_black"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        app:met_baseColor="@color/eat_black"
                        app:met_primaryColor="@color/eat_black"
                        app:met_errorColor="@color/eat_black"
                        app:met_hideUnderline="false"
                        app:met_floatingLabel="none"
                        android:hint="Event name:"
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:gravity="left" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:id="@+id/imageView6"
                            android:layout_gravity="center"
                            android:background="@drawable/location"
                            android:visibility="gone" />

                        <com.rengwuxian.materialedittext.MaterialAutoCompleteTextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/add_event_fragment_auto_location_label"
                            android:hint="Location"

                            android:focusable="true"
                            android:dropDownWidth="fill_parent"
                            android:completionThreshold="1"
                            android:dropDownHeight="100dp"
                            android:textColor="@color/eat_black"
                            android:textColorHint="@color/eat_black"
                            android:background="@drawable/gray_text_field"
                            android:layout_marginRight="5dp"
                            android:textSize="15sp"
                            android:gravity="left"
                            android:layout_marginLeft="5dp"
                            app:met_baseColor="@color/eat_black"
                            app:met_primaryColor="@color/eat_black"
                            app:met_errorColor="@color/eat_black"
                            app:met_hideUnderline="false"
                            app:met_floatingLabel="none"
                            app:met_singleLineEllipsis="false" />

                    </LinearLayout>

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/add_event_fragment_apartment_numebr_edit_text_id"
                        android:textSize="15sp"
                        android:textIsSelectable="false"
                        android:textColor="@color/eat_black"
                        android:background="@drawable/gray_text_field"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        app:met_baseColor="@color/eat_black"
                        app:met_primaryColor="@color/eat_black"
                        app:met_errorColor="@color/eat_black"
                        app:met_hideUnderline="false"
                        app:met_floatingLabel="none"
                        android:hint="Appartment Number"
                        android:layout_weight="1"
                        android:gravity="left" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="FROM"
                        android:id="@+id/textView12"
                        android:layout_marginLeft="5dp"
                        android:textSize="12dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/eat_gray" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Staring date"
                            android:id="@+id/add_event_fragment_starting_date_label"
                            android:layout_weight="1"
                            android:textSize="15dp"
                            android:textColor="@color/eat_black"
                            android:gravity="left|center_vertical"
                            style="@android:style/Widget.Holo.Light.Spinner" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Starting time"
                            android:id="@+id/add_event_fragment_starting_time_label"
                            android:layout_weight="1"
                            android:textSize="15dp"
                            android:textColor="@color/eat_black"
                            android:gravity="left|center_vertical"
                            android:layout_marginLeft="5dp"
                            android:paddingLeft="5dp"
                            style="@android:style/Widget.Holo.Light.Spinner" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="TO"
                        android:id="@+id/textView13"
                        android:layout_marginLeft="5dp"
                        android:textSize="12dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/eat_gray"
                        android:layout_marginTop="5dp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp">

                        <TextView
                            style="@android:style/Widget.Holo.Light.Spinner"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Ending date"
                            android:id="@+id/add_event_fragment_ending_date_label"
                            android:layout_weight="1"
                            android:textSize="15dp"
                            android:textColor="@color/eat_black"
                            android:gravity="left|center_vertical" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Ending time"
                            android:id="@+id/add_event_fragment_ending_time_label"
                            android:layout_weight="1"
                            android:textSize="15dp"
                            android:textColor="@color/eat_black"
                            android:gravity="left|center_vertical"
                            android:layout_marginLeft="5dp"
                            android:paddingLeft="5dp"
                            style="@android:style/Widget.Holo.Light.Spinner" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.6"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">


            <ListView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/add_event_fragment_list_view"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:divider="@color/eat_black"
                android:dividerHeight="0dp" />

        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="No dishes for this event."
            android:id="@+id/add_event_fragment_no_more_events_overlay"
            android:background="@color/eat_white"
            android:gravity="center"
            android:textColor="@color/eat_black"
            android:visibility="visible"
            android:layout_marginTop="10dp" />
    </FrameLayout>


</LinearLayout>

