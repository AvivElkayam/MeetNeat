    <com.makeramen.roundedimageview.RoundedImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/add_fragment_fragment_dish_row_image_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="center"


        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="150dp"
        android:layout_height="fill_parent"
        android:background="@drawable/rounded_corners_semi_transparent_background"


        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="New Text"
                android:id="@+id/add_fragment_fragment_dish_row_title_text_view"
                android:gravity="left|center_vertical"
                android:textColor="@color/eat_white"
                android:layout_weight="2"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Dishes Left"
                        android:id="@+id/textView14"
                        android:layout_weight="1"
                        android:textSize="15dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:textColor="@color/eat_white" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Price"
                        android:id="@+id/textView15"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textSize="15dp"
                        android:paddingLeft="5dp"
                        android:textColor="@color/eat_white" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="2">

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="6"
                        android:id="@+id/add_fragment_fragment_dish_row_quantity_text_view"
                        android:layout_gravity="left|bottom"
                        android:textColor="@color/eat_black"
                        android:textSize="15dp"
                        android:gravity="center"
                        android:paddingTop="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/yellow_circle"

                        android:layout_margin="5dp" />

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="20$"
                        android:id="@+id/add_fragment_fragment_dish_row_price_text_view"
                        android:textColor="@color/eat_black"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/yellow_circle"
                        android:autoText="true"
                        android:layout_margin="5dp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</FrameLayout>