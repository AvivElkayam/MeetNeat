    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="4dp">
    <com.makeramen.roundedimageview.RoundedImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/add_fragment_fragment_dish_row_image_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="center"


        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/eat_black_semi_transparent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="New Text"
                android:id="@+id/add_fragment_fragment_dish_row_title_text_view"
                android:gravity="left|center_vertical"
                android:layout_marginLeft="5dp"
                android:textColor="@color/eat_black"
                android:layout_weight="1"
                android:textSize="20dp"
                android:layout_marginTop="10dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="bottom"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:id="@+id/imageView14"
                    android:background="@drawable/event_dishes_orange"
                    android:layout_gravity="top|center_horizontal"
                    android:layout_marginLeft="5dp" />

                <TextView
                    android:layout_width="204dp"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Large Text"
                    android:id="@+id/add_fragment_fragment_dish_row_quantity_text_view"
                    android:layout_gravity="left|bottom"
                    android:textColor="@color/eat_black"
                    android:textSize="15dp"
                    android:gravity="top|center_vertical"
                    android:layout_marginLeft="5dp"
                    android:paddingTop="3dp" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="84dp"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="20$"
            android:id="@+id/add_fragment_fragment_dish_row_price_text_view"
            android:layout_gravity="right"
            android:textColor="@color/eat_orange"
            android:gravity="center"
            android:textSize="20dp" />
    </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>