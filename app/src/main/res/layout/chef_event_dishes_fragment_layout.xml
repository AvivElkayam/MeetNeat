<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/chef_event_dishes_fragment_container"
    android:background="@color/eat_black">
    <android.support.v4.widget.SwipeRefreshLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/chef_events_dishes_swipe_to_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <ListView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/chef_events_dishes_list_view"
        android:layout_gravity="center_horizontal"
        android:layout_weight="8" />
    </android.support.v4.widget.SwipeRefreshLayout>

    <Button
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:text="+"
        android:id="@+id/chef_events_dishes_add_button"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="50dp" />

</FrameLayout>