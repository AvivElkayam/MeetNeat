<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/chef_event_meals_fragment_container"
    android:background="@color/eat_white">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/chef_events_meals_list_view"
        android:layout_gravity="center_horizontal"
        android:layout_weight="8" />
    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/chef_events_meals_floating_add_button"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="left|bottom"
        android:layout_marginBottom="20dp"

        android:text="+"
        android:textColor="@drawable/plus_icon"
        android:layout_marginLeft="20dp"
        android:background="@drawable/yellow_circle" />
</FrameLayout>