<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="500dp"
    android:divider="@color/eat_white"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:layout_gravity="top"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="bottom"
                android:layout_weight="1.2">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:id="@+id/hungry_specifiec_chef_events_dialog_box_chef_image"
                    android:layout_gravity="bottom"

                    xmlns:app="http://schemas.android.com/apk/res-auto"

                    app:riv_corner_radius="48dp"
                    app:riv_border_width="1dip"
                    app:riv_border_color="@color/eat_gray"
                    app:riv_mutate_background="true"

                    />

            </FrameLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Chef: Dan Later"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/hungry_specifiec_chef_events_dialog_box_chef_name_text"
                    android:layout_weight="1"
                    android:textColor="@color/eat_white"
                    android:gravity="bottom"
                    android:layout_marginBottom="10dp"
                    android:maxLines="1"
                    android:textSize="20sp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="2">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:id="@+id/imageView7"
                        android:background="@drawable/chef_48_yellow"/>
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:id="@+id/imageView8"
                        android:background="@drawable/chef_48_yellow"/>
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:id="@+id/imageView9"
                        android:background="@drawable/chef_48_yellow"/>
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:id="@+id/imageView10"
                        android:background="@drawable/chef_48_yellow"/>
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:id="@+id/imageView11"
                        android:background="@drawable/chef_48_yellow"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.3"
                android:gravity="center">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:id="@+id/imageView"
                    android:background="@drawable/location48" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="xecutive Chef at Mitzpe Alumot, Ceo And Founder at Pure Intentions LLC, Camp Director at Ekar Farm"
            android:id="@+id/textView16"
            android:layout_weight="1.5"
            android:textSize="16sp"
            android:textColor="@color/eat_white"
            android:background="@color/eat_black_semi_transparent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/hungry_specifiec_chef_events_dialog_box_List_view"
        android:layout_gravity="center_horizontal"
        android:divider="@color/eat_white" />
</LinearLayout>