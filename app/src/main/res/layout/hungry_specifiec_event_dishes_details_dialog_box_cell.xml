<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:layout_weight="1">
    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        >
<FrameLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/hungry_fragment_event_dishes_dialog_box_cell_image_view"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:background="@android:drawable/ic_menu_gallery" />

    <FrameLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:layout_gravity="bottom"
        android:background="@color/eat_black_semi_transparent">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Pasta"
            android:id="@+id/hungry_fragment_event_dishes_dialog_box_cell_dish_name_text_view"
            android:gravity="left|center_vertical"
            android:textSize="15dp"
            android:layout_gravity="left"
            android:textColor="@color/eat_white"
            android:layout_weight="3" />

        <TextView
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/hungry_fragment_event_dishes_dialog_box_cell_price_texr_view"
            android:text="12$"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="@color/eat_black"
            android:layout_weight="1"
            android:background="@drawable/yellow_circle"
            android:layout_gravity="center_vertical|right"
            android:visibility="gone" />
    </FrameLayout>
</FrameLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>