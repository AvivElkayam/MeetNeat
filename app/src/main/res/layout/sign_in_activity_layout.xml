<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="app.meantneat.com.meetneat.Controller.SignInActivity">

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/sign_in_activity_email_text_field_id"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="141dp"
        android:hint="E-mail" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/sign_in_activity_password_field_id"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:hint="Password" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/sign_in_activity_user_name_text_field_id"

        android:hint="Nick name"
        android:layout_below="@+id/sign_in_activity_email_text_field_id"
        android:layout_alignStart="@+id/sign_in_activity_password_field_id" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Sign in"
        android:id="@+id/sign_in_activity_sign_in_button_id"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/sign_in_activity_password_field_id"
        android:layout_marginBottom="68dp" />
</RelativeLayout>
